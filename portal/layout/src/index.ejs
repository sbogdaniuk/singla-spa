    <!-- Shared dependencies go into this import map -->

    <script type="injector-importmap">
      {
        "imports": {
          "single-spa": "https://cdn.jsdelivr.net/npm/single-spa@6.0.3/lib/es2015/esm/single-spa.min.js",
          "path-to-regexp": "https://cdn.jsdelivr.net/npm/path-to-regexp@6.3.0/dist/index.min.js"
        }
      }
    </script>

    <% if (isLocal) { %>
    <!-- Development Import Map -->
    <script type="injector-importmap">
      {
        "imports": {
          "react": "https://esm.sh/react@19.0.0?dev",
          "react-dom": "https://esm.sh/react-dom@19.0.0?dev",
          "react-dom/client": "https://esm.sh/react-dom@19.0.0/client?dev"
